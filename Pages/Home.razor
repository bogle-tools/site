@page "/"
@inject IAppData appData
@inject NavigationManager Navigation

<PageTitle>
bogle.tools
</PageTitle>

<p style=float:left>"Take charge of your savings!"</p>
<div style=float:left;margin-left:50px>
    <a href=/profiles  title="profile name" @onclick=navWithBackStack @onclick:preventDefault >
        @appData.CurrentProfileName profile
    </a>
</div>


<p style=clear:left>
    <a href='portfolio'>
        <span style="margin:3;font-Size:24pt">📈</span>
        Portfolio Tracker</a><br/>
        organize and analyze your portfolio
</p>
<p>
    <a href='saving'>
        <span style="margin:3;font-Size:24pt">💰</span>
        Saving Plan</a><br/>
        plan your annual savings
</p>
<hr/>
<p>
    <a href='FAQ'>
        <span style="margin:3;font-Size:24pt">🔭</span>
        FAQ</a><br/>
        frequently asked questions
</p>
<p>
    <a href='portfolio-review'>
        <span style="margin:3;font-Size:24pt">🧐</span>
        Portfolio Review</a><br/>
        gather more info, and ask questions on bogleheads.org forum
</p>
<p>
    <a href='rsu-tracker'>
        <span style="margin:3;font-Size:24pt">🔮</span>
        RSU Tracker</a><br/>
        track Restricted Stock Unit grants
</p>
<br/>

@code {
    private void navWithBackStack()
    {
        appData.LastPageUri = Navigation.Uri;
        Navigation.NavigateTo("/profiles");
    }
}