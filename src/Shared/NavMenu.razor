@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><span class="oi oi-home" aria-hidden="true"></span> bogle.tools</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        <div class="nav-item px-2">
            <NavLink class="nav-link" href="/saving">
                Annual Saving
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link" href="/portfolio">
                Portfolio Review (<b>Preview</b>)
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link" href="/search">
                Bogleheads.org Search
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <a class="nav-link" href="https://rrelyea.github.io/3fund" target="_blank">
                3Fund Performance
            </a>
        </div>
        
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
